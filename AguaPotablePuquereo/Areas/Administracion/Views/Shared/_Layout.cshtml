<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/materialize.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <title>@ViewBag.Title - Administración</title>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="top-nav light-blue darken-4">
            <div class="nav-wrapper">
					<!-- Título y links: Desktop -->
                    <a class="brand-logo center hide-on-med-and-down">Agua Potable Puquereo</a>
                    <ul id="nav-mobile" class=" right hide-on-med-and-down">
                        <li><a href=@Url.Action("Logout", "Login")>Salir</a></li>
                    </ul>
					<!-- Título y links: Mobile -->
                    <a class="truncate brand-logo center hide-on-large-only">APR Puquereo</a>
                    <a data-activates="mobile-demo" href="#" class="button-collapse hide-on-large-only"><i class="material-icons">menu</i></a>
                    <ul class="side-nav hide-on-large-only" id="mobile-demo">
                        <li><a href=@Url.Action("Logout", "Login")>Salir</a></li>
                    </ul>
            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

</body>
</html>