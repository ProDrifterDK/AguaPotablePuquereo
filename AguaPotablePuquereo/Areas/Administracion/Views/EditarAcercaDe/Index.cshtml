@model AguaPotablePuquereo.Models.SQL.TBL_PAGINAS_ADMINISTRABLES
@{
	ViewBag.Title = "Editar Acerca De";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.6.0/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.6.0/css/froala_style.min.css" rel="stylesheet" type="text/css" />

<div class="container" style="text-align: initial;">
	<div class="row">
		<div class="col s12">
            <form method="post">
                @Html.HiddenFor(o=> o.PADM_ID)
                @Html.TextAreaFor(o=>o.PADM_HTML_TEXT, null)
                <br />
                <input type="submit" class="z-depth-3 btn green accent-4" value="Guardar"/>
            </form>
        </div>
	</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/mode/xml/xml.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.6.0//js/froala_editor.pkgd.min.js"></script>
<script>
    $(document).ready(function () {
		if ('@ViewBag.Exito' == 'True') {
            Resyst.Exito('Se han guardado sus cambios con éxito');
        }
        else if ('@ViewBag.Exito' == 'False') {
            Resyst.Error('Ha ocurrido un error al guardar');
        }

        fncEditor()
    })


    function fncEditor() {

        tinymce.init({
            selector: "#PADM_HTML_TEXT",
            theme: "modern",
            height: 300,
            plugins: [
                "advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker",
                "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
                "save table contextmenu directionality emoticons template paste textcolor"
            ],
            relative_urls: false,
            remove_script_host: false,
            toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | print preview media fullpage | forecolor backcolor emoticons",
            style_formats: [
                { title: 'Normal', block: 'p' },
                { title: 'Texto rojo', inline: 'span', styles: { color: '#ff0000' } },
                { title: 'Titulo', block: 'h1' },
                { title: 'Subtitulo', block: 'h2' },
                { title: 'Subtitulo 2', block: 'h3' },
            ]
        });


    }
    function fncSubmith() {
        var texto = tinyMCE.activeEditor.getContent();
        var retorno = escape(texto);
        $("#Plantilla").val(retorno);
        $("#btnSubmit").click();

    }
</script>